# ============================================
# Root .env.example - For Docker Compose
# ============================================
# Copy this to .env in the root directory for Docker Compose setup
# This file contains all environment variables needed for both services

# ============================================
# Backend Environment Variables
# ============================================
# Firebase Configuration (Required)
FIRESTORE_PROJECT_ID=your-firebase-project-id
FIRESTORE_SUBCOLLECTION_ID=your-subcollection-id
FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/service-account.json

# Server Configuration
PORT=8080
CORS_ORIGIN=http://localhost:3000
GIN_MODE=release

# Security (Required)
ADMIN_PASSWORD=your-secure-admin-password

# ============================================
# Frontend Environment Variables (for Docker build)
# ============================================
# Backend API URL
VITE_API_URL=http://localhost:8080/api

# Admin password (must match ADMIN_PASSWORD above)
VITE_ADMIN_PASSWORD=your-secure-admin-password
